
<div class="container">
    <h1 class="text-center mb-4">Listado de empleados</h1>
    <div class="row mt-3">
        <div class="col-md-4">
            <div class="mt-4 d-grid gap-2 ">
                <a class="btn btn-secondary" asp-controller="Employees" asp-action="Create">Registrar un nuevo empleado</a>
                <a class="btn btn-success" asp-controller="Historiales" asp-action="Index">Historial</a>
                <form asp-controller="Empleados" asp-action="Logout" method="post">
                    <button class="btn btn-primary" type="submit">Cerrar sesion</button>
                </form>
            </div>
        </div>
        <div class="col-md-8">
            <div class="col-md-6" >
                <form  asp-controller="Employees" asp-action="Search" method="get">
                    <div class="input-group mb-3">
                    <input type="text" name="searchString" class="form-control" placeholder="Search">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                    </div>
                    </div>
                </form> 
            </div>

            <table class="table table-border border-dark mt-4">
                <thead>
                    <tr>
                        <th class="col">Nombres</th>
                        <th class="col">Apellidos</th>
                        <th class="col">Correo</th>
                        <th class="col">Acciones</th>
                        
                    </tr>
                </thead>
@foreach(var empleado in Model){
                <tbody>
                    <tr>
                        <td>@empleado.Names</td>
                        <td>@empleado.LastNames</td>
                        <td>@empleado.Email</td>
                        <td>
                            <a asp-route-id="@empleado.Id" asp-action="Delete" asp-controller="Empleados" class="btn btn-danger">Eliminar</a>
                            <a asp-route-id="@empleado.Id" asp-action="EntradaHorario" asp-controller="Empleados" class="btn btn-danger">Ingreso</a>
                            <a asp-route-id="@empleado.Id" asp-action="SalidaHorario" asp-controller="Empleados" class="btn btn-danger">Salida</a>
                        </td>

                       
                    </tr>
                </tbody>
}
            </table>
        </div>
    </div>
</div>
