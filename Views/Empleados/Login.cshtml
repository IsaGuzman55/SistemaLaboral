@model Empleado

@{
    ViewData["Title"] = "Login";
}

<div class="container" style="height: 80vh;">
    <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
        <div class="card col-md-8" style="box-shadow: 0 0 10px rgb(105, 104, 104);">
            <div class="card-body">
                <h1 class="text-center">Iniciar Sesi√≥n</h1>

                <form asp-action="Login" asp-controller="Empleados" method="post">
                    <div class="from-group mb-3">
                        <label for="">Email:</label>
                        <input type="email" asp-for="Email" class="form-control">
                    </div>

                    <div class="from-group mb-3">
                        <label  for="">Password:</label>
                        <input type="password" asp-for="Password" class="form-control">
                    </div>

                    <div class="d-flex">
                        <button class="btn btn-primary me-4" type="submit" >Iniciar sesion</button> 
                        <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Volver al inicio</a>
                    </div>
                    
                </form>

                <div class="mt-2" style="color: rgb(185, 22, 22);">@ViewBag.Error</div>
                
            </div>
        </div>
    </div>
    
</div>